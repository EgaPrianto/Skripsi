<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_accelero_sensor"
    tools:context="ega.ftis.unpar.com.sensorrecorder.SensorAccelerometerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x = "
        android:id="@+id/textViewXData"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="y = "
        android:id="@+id/textViewYData"
        android:layout_below="@+id/textViewXData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="z = "
        android:id="@+id/textViewZData"
        android:layout_below="@+id/textViewYData"
        android:layout_alignLeft="@+id/textViewYData"
        android:layout_alignStart="@+id/textViewYData" />

    <TextView
        android:text="theta = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewThetaData"
        android:layout_below="@+id/textViewZData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="x sin = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewXSinData"
        android:layout_below="@+id/textViewThetaData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="y sin = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewYSinData"
        android:layout_below="@+id/textViewXSinData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="z sin = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewYSinData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewZSinData" />

    <TextView
        android:text="cos = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewZSinData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewCosData" />

    <TextView
        android:text="Debugging = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCosData"
        android:id="@+id/textViewDebug" />

    <TextView
        android:text="Accuraccy ="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDebug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewAccuracy" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.egaprianto.testingsensors.MainActivity">

    <Button
        android:onClick="onClickLightSensorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelero Sensor"
        android:id="@+id/accelSensor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record All RAW Sensor Data"
        android:id="@+id/recrdAllRAWData"
        android:layout_below="@+id/accelSensor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="recordAllRAWSensorData" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GryoscopeSensor"
        android:id="@+id/gryoSensor"
        android:layout_below="@+id/recrdAllRAWData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onGyroSensorClicked" />

    <Button
        android:text="Rotation Vector Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rotVecSensor"
        android:layout_below="@+id/magSensor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onRotVecSensorButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetometer Sensors"
        android:id="@+id/magSensor"
        android:onClick="onMagSensorClicked"
        android:layout_below="@+id/gryoSensor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
